// 时间
const time_box = document.querySelector('.countdown')
const time_day = document.querySelector('#day')

function tow(n) {
  return n >= 0 && n < 10 ? '0' + n : '' + n;
}

function getDate(){
  let oDate = new Date()
  let oldTime = oDate.getTime()
  let newDate = new Date('2026/6/7 00:00:00');
  let newTime = newDate.getTime()
  let second = Math.floor((newTime - oldTime) / 1000)
  let day = Math.floor(second / 86400)
  second = second % 86400
  let hour = Math.floor(second / 3600)
  second %= 3600
  let minute = Math.floor(second / 60)
  second %= 60
  let str = tow(hour) + '<span>小时 </span>' +
    tow(minute) + '<span>分 </span>' +
    tow(second) + '<span>秒</span>'
  time_box.innerHTML = str;
  time_day.innerText = tow(day)
}

getDate();
setInterval(getDate, 1000);

