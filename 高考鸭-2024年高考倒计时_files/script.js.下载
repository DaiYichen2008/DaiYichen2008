function sayings(){
  return saying_list[Math.floor(Math.random() * 100)]
}

$("#saying-text").html(sayings())
$("#saying").fadeIn()
setInterval(function () {
  $("#saying").fadeOut("slow", function () {
    $("#saying-text").html(sayings())
    $("#saying").fadeIn()
  })
}, 10000)

// bing
$(document).ready(()=>{
  $.get('./img/img_api.php/?type=copyright',(data)=>{
    let text = JSON.parse(data);
    $('#bgi-txt').text(text.copyright)
  })
})

function closePopup() {
  var popup = document.getElementById("popup");
  popup.style.display = "none";
}

function autoClosePopup() {
  var popup = document.getElementById("popup");
  setTimeout(function() {
    popup.style.display = "none";
  }, 8000); // 5000表示5秒后自动关闭，可根据需求自定义时间
}

var popup = document.createElement("div");
popup.innerHTML = `
  <div id="popup" class="popup">
    <span class="close-btn" onclick="closePopup()">X</span>
    <p><a href="https://space.bilibili.com/591954621?spm_id_from=333.1007.0.0" target="_blank" one-link-mark="yes"><br >我的主页</a></p>
  </div>`;

document.body.appendChild(popup);

autoClosePopup();

